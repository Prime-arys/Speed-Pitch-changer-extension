{
    "name": "Speed-Pitch changer",
    "description": "Modify the speed with the pitch of an html5 video",
    "version": "1.2.5",
    "manifest_version": 2,
    "minimum_chrome_version": "86",
    


    "browser_action": {
    	"default_icon": "icons/border-38.png",
        "default_title": "Speed/Pitch changer",
        "default_popup": "popup.html"
        
},
    
    "icons": {
        "16": "icons/border-16.png",
        "32": "icons/border-32.png",
        "38": "icons/border-38.png",
  		"48": "icons/border-48.png",
        "128": "icons/border-128.png"
	},

    "background": {
    "scripts": [ "content-scripts-register-polyfill.js","background.js" ]
},



    "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webNavigation",
    "<all_urls>",
    "*://*/*"
]

}


